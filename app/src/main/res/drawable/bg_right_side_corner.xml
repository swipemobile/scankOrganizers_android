<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <solid android:color="#1A000000" />
            <corners android:topRightRadius="@dimen/dim_16" android:bottomRightRadius="@dimen/dim_16"/>

        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="5px" android:top="1px" android:right="1px">

        <shape  android:shape="rectangle">

            <solid android:color="#FFFFFF" />
            <corners android:topRightRadius="@dimen/dim_16" android:bottomRightRadius="@dimen/dim_16"/>


        </shape>

    </item>


</layer-list>